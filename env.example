# Kafka Configuration
KAFKA_BROKERS=broker:9092
KAFKA_CLIENT_ID=kafkadog
KAFKA_RETRY_MAX_ATTEMPTS=5
KAFKA_RETRY_BASE_DELAY_MS=500
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_REQUEST_TIMEOUT=30000

# Service Ports
PORT=3001
NODE_ENV=development

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Docker Configuration
# These are used by docker-compose.yml
# KAFKA_BROKERS=kafka:9092 (for services running in Docker)
# KAFKA_BROKERS=localhost:9092 (for local development)

